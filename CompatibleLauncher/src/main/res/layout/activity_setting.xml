<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jiang.launcher.views.TitleView
        android:layout_width="match_parent"
        android:layout_height="42dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/setting_uninstall"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:background="@drawable/sel_main_focus"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/setting_uninstall" />

            <ImageButton
                android:id="@+id/setting_accelerate"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:background="@drawable/sel_main_focus"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/setting_accelerate" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/setting_clean"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:background="@drawable/sel_main_focus"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/setting_clean" />

            <ImageButton
                android:id="@+id/setting_autorun"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:background="@drawable/sel_main_focus"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/setting_autorun" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/setting_net"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/sel_main_focus"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/setting_net" />


            <ImageButton
                android:id="@+id/setting_net_speed"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/sel_main_focus"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/setting_net_speed" />

            <ImageButton
                android:id="@+id/setting_more"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/sel_main_focus"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/setting_more" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/setting_update"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/sel_main_focus"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/setting_update" />

            <ImageButton
                android:id="@+id/setting_file"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/sel_main_focus"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/setting_file" />

            <ImageButton
                android:id="@+id/setting_about"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/sel_main_focus"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/setting_about" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>