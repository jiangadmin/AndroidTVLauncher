<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jiang.launcher.views.FocusView
        android:id="@+id/focus_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/local_focus_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <!--互动电视-->
                <ImageButton
                    android:id="@+id/local_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/sel_focus"
                    android:focusable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/local_tv" />

                <!--本地旅游-->
                <ImageButton
                    android:id="@+id/local_tour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/sel_focus"
                    android:focusable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/local_tour" />
            </LinearLayout>


            <ImageButton
                android:id="@+id/local_ad1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:background="@drawable/sel_focus"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/local_ad1" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:layout_weight="1"
                    android:id="@+id/local_cate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_focus"
                    android:focusable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/local_cate" />

                <ImageButton
                    android:layout_weight="1"
                    android:id="@+id/local_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/sel_focus"
                    android:focusable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/local_weather" />

                <ImageButton
                    android:layout_weight="1"
                    android:id="@+id/local_ad2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_focus"
                    android:scaleType="centerCrop"
                    android:src="@drawable/local_ad2" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:layout_weight="1"
                    android:id="@+id/local_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_focus"
                    android:scaleType="centerCrop"
                    android:src="@drawable/local_news" />

                <ImageButton
                    android:layout_weight="1"
                    android:id="@+id/local_app_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_focus"
                    android:scaleType="centerCrop"
                    android:src="@drawable/local_app_store" />

                <ImageButton
                    android:layout_weight="1"
                    android:id="@+id/local_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_focus"
                    android:scaleType="centerCrop"
                    android:src="@drawable/local_video" />
            </LinearLayout>


        </LinearLayout>
    </HorizontalScrollView>
</FrameLayout>