<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:launcher="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <com.jiang.launcher.features.indicator.TabButton
        android:id="@+id/indicator_tab1"
        android:layout_width="@dimen/indicator_tab_width"
        android:layout_height="@dimen/indicator_tab_height"
        android:background="@drawable/sel_indicator"
        android:focusable="true"
        android:gravity="center"
        launcher:buttonTitle="@string/indicator_item_service_text"/>

    <com.jiang.launcher.features.indicator.TabButton
        android:id="@+id/indicator_tab2"
        android:layout_width="@dimen/indicator_tab_width"
        android:layout_height="@dimen/indicator_tab_height"
        android:background="@drawable/sel_indicator"
        android:focusable="true"
        android:gravity="center"
        launcher:buttonTitle="@string/indicator_item_setting_text"/>

    <com.jiang.launcher.features.indicator.TabButton
        android:id="@+id/indicator_tab3"
        android:layout_width="@dimen/indicator_tab_width"
        android:layout_height="@dimen/indicator_tab_height"
        android:background="@drawable/sel_indicator"
        android:focusable="true"
        android:gravity="center"
        launcher:buttonTitle="@string/indicator_item_app_text"/>
</LinearLayout>